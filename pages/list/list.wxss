.book-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin: 20rpx 0;
}

.book-name {
  display: block;
  margin-left: 20rpx;
  line-height: 17rpx;
}

.new-book {
  display: flex;
  flex-direction: row;
}

.new-book-input {
  flex: 1;
  font-size: 34rpx;
  box-sizing: border-box;
  border-top: 1px solid #eee;
  border-bottom: 1px solid #eee;
  padding-left: 12px;
  line-height: 100%;
  height: 100%;
}

.add-book {
  color: #FFF;
  background-color: #1aad19;
  font-size: 34rpx;
  line-height: 54rpx;
  padding: 0 16rpx;
}